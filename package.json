{
  "name": "react-sandbox",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "test-auto": "./node_modules/.bin/jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "start": "NODE_ENV=development node fuse.js dev",
    "build": "NODE_ENV=production node fuse.js prod",
    "docz-dev": "docz dev",
    "docz-build": "docz build"
  },
  "author": "Christian Todd",
  "license": "MIT",
  "dependencies": {
    "data.task": "^3.1.1",
    "fuse-box": "^3.3.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "@types/react": "^16.4.2",
    "@types/react-dom": "^16.0.6",
    "autoprefixer": "^8.6.4",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.7.0",
    "docz": "^0.4.0",
    "express": "^4.16.3",
    "jest": "^23.2.0",
    "jest-dom": "^1.3.1",
    "jest-watch-typeahead": "^0.1.0",
    "postcss-modules": "^1.1.0",
    "prettier": "^1.13.6",
    "react-testing-library": "^4.1.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2",
    "uglify-es": "^3.3.9"
  },
  "jest": {
    "automock": true,
    "verbose": true,
    "collectCoverage": true,
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx,jsx}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "\\.d\\.ts$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "\\.d\\.ts$",
      "__snapshots__"
    ],
    "testURL": "http://localhost:3000",
    "transform": {
      "^.+\\.(scss|css)$": "<rootDir>/config/testing/style-mock.js",
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/testing/file-mock.js",
      "^.+\\.(scss|css)$": "<rootDir>/config/testing/style-mock.js",
      "^@[/](.*)": "<rootDir>/src/$1"
    },
    "unmockedModulePathPatterns": [
      "react"
    ],
    "testRegex": "\\.spec\\.(js|ts|jsx|tsx)$",
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            "env"
          ],
          "plugins": [
            "transform-es2015-modules-commonjs",
            "babel-plugin-dynamic-import-node"
          ]
        },
        "tsConfigFile": "./tsconfig.json"
      }
    }
  }
}
